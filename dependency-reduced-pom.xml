<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.flipkart.fdp</groupId>
  <artifactId>blueshift</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <description>Blueshift is flipkarts data migration utility for the Hadoop ecosystem.</description>
  <url>http://github.com/flipkart-incubator/blueshift</url>
  <prerequisites>
    <maven>3.0.0</maven>
  </prerequisites>
  <issueManagement>
    <system>github</system>
    <url>http://github.com/flipkart-incubator/blueshift/issues</url>
  </issueManagement>
  <licenses>
    <license>
      <name>Apache License 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.html</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <scm>
    <connection>scm:git:git://github.com/flipkart-incubator/blueshift.git</connection>
    <developerConnection>scm:git:git@github.com/flipkart-incubator/blueshift.git</developerConnection>
    <url>http://github.com/flipkart-incubator/blueshift</url>
  </scm>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.3</version>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer />
                <transformer>
                  <mainClass>com.flipkart.fdp.migration.distcp.core.MirrorDistCPDriver</mainClass>
                </transformer>
              </transformers>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <dw-version>0.6.2</dw-version>
    <slf4j-version>1.7.12</slf4j-version>
    <commons-cli-version>1.2</commons-cli-version>
    <dart-version>0.1.3</dart-version>
    <apache-commons-version>1.3.2</apache-commons-version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <hdp-version>hdp2.2.0</hdp-version>
    <hadoop-version>2.6.0</hadoop-version>
    <jackson-version>2.4.1</jackson-version>
  </properties>
</project>

